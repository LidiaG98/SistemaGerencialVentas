<!-- modernizr css -->
<script src="assets/js/vendor/modernizr-2.8.3.min.js"></script>

<div class="col-12 mt-5">
    <div class="card">
        <div class="card-body">
            <div class="row">
                <h4 class="header-title col-10">Usuarios</h4>
                <div class="col-2">
                    <button class="col-8 btn btn-success"><i class="ti-plus"></i> Agregar Usuario</button>
                    <button class="btn col-3 btn-primary"><i class="ti-printer"></i></button>
                    <br />
                    <br />
                </div>
            </div>            
            <div class="data-tables datatable-primary">
                <table id="dataTable2" class="text-center">
                    <thead class="text-capitalize">
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">Email</th>
                            <th scope="col">Nombres</th>
                            <th scope="col">Apellidos</th>
                            <th scope="col">DUI</th>
                            <th scope="col">NIT</th>
                            <th scope="col">NUP</th>
                            <th scope="col">Teléfono</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            int counter = 1;
                            foreach (var u in Model)
                            {
                                <tr>
                                    <th scope="row">@counter</th>
                                    <td>@u.Email</td>
                                    <td>@u.nombres</td>
                                    <td>@u.apellidos</td>
                                    <td>@u.dui</td>
                                    <td>@u.nit</td>
                                    <td>@u.nup</td>
                                    <td>@u.telefono</td>
                                </tr>
                                counter++;
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<!-- Primary table end -->
